{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noResolve": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "allowJs": true,
    "types": [
      "@types/jest",
      "node"
    ],
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "*.d.ts",
    "**/*.ts"
  ],
  "exclude": [
    "jest.config.js",
    "./dist",
    "./coverage",
    "__tests__"
  ]
}
