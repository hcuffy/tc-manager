{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": true,
      "jsx": "react",
      "target": "ES6",
      "allowJs": true,
      "noResolve": false,
      "noImplicitAny": false,
      "noUnusedParameters": false,
      "skipLibCheck": true,
      "noUnusedLocals": false,
      "sourceMap": true,
      "resolveJsonModule" :  true,
      "outDir": "dist"
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules/"
  ]
}
