{
  "name": "tc-manager",
  "version": "0.1",
  "description": "Test Case Manager",
  "author": "Henry Cuffy",
  "license": "MIT",
  "scripts": {
    "run-client": "yarn workspace tc-manager-client dev",
    "run-backend": "yarn workspace tc-manager-backend dev",
    "build-env": "yarn workspaces foreach run build",
    "install-dependencies": "yarn install && yarn workspaces foreach run yarn install",
    "dev": "concurrently --kill-others-on-fail \"yarn run-backend\"  \"yarn run-client\""
  },
  "dependencies": {
    "concurrently": "^7.3.0"
  },
  "workspaces": [
    "client",
    "backend"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@3.2.2"
}
